[
    {%- assign start=true -%}
    {%- for post in include.list | limit: 3 -%}
        {%- if start -%}
            {%- assign start=false -%}
            {%- else -%},
        {%- endif -%}
        {
            "name": "{{ post.title | escape}}",
            "date": "{{ post.date | date: "%Y-%m-%d" }}",
            "image": "{{ post.image }}",
            "icon": "{{ post.icon }}",
            "url": "{{ post.url  }}",
            "group": "{{ post.tags[0] }}",
            "desc": "{{ post.description | escape }}",
            "readTime": {{ post.readTime }}
        }
    {%- endfor -%}
]